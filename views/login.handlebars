<h1>Login</h1>
<form action= "/login" id="login-form" method="POST"> 
     <div class="mb-3">
      <div class="user">
          <label for="username">Username</label>
          <input type="text" id="username" placeholder="" value="" required="">
          <div class="invalid-feedback">
            Valid Username is required.
          </div>
      </div>
      <br>
      <div class = "pass">
        <label for="password">Password</label>
        <input type="password" id="password" placeholder="" value="" required="">
        <div class="invalid-feedback">
          Valid password is required.
        </div>
      </div>
      <br>
      <button id="login-btn" class="btn btn-light btn-lg" type="submit">Login</button>
      <br>
      <a class="signup-link" href="/signup">Need to register? Click here to sign-up</a>
      {{#if error}}
        <p class={{class}}> {{error}}</p> 
      {{/if}}
    </div>
</form>

