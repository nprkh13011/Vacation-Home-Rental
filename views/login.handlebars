{{!-- Get '/' method in routes  --}}
<h1>Login</h1>
<form action= "/login" id="login-form" method="POST"> 
    <div class="user">
          <label for="username">Username</label>
          <input type="text" id="username" placeholder="" value="" required="">
          <div class="invalid-feedback">
            Valid username is required.
          </div>
      </div>
      <br>
      <div class = "pass">
        <label for="password">Password</label>
        <input type="password" id="password" placeholder="" value="" required="">
        <div class="invalid-feedback">
          Valid password is required.
        </div>
    <button type="submit">Login</button>
    <a href="/signup">Need to register? Click here to sign-up</a>
    {{#if error}}
      <p class={{class}}> {{error}}</p> 
    {{/if}}
</form>

